<h1>This is the question you sent</h1>

<p>
Question: <%= @question.question %>
</p>

<p>
Name: <%= @question.name %>
</p>

<%= link_to "Answer this question", new_answer_path(:question_id => @question.id) %><br />

<% if @answer.exists? %>

  <h1>Answers</h1>

  <% @answer.each do |ans| %>
  <p>
  <%= ans.name %> says <%= ans.answer %>
  </p>
  <% end %>

<% end %>

<%= link_to "Back to questions listing", questions_path %>