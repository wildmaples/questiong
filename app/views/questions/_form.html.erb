<%= render 'shared/errors', obj: @question %>

<div class="row col-xs-5">
    <%= form_for @question do |q| %>

    <div class="form-group">
        <%= q.label :question %><br />
        <%= q.text_area :question, rows: 6, class: "form-control", placeholder: "Question", autofocus: true %>
    </div>

    <div class="form-group">
        <%= q.label :name %><br />
        <%= q.text_field :name, class: "form-control", placeholder: "Name", autofocus: true %>
    </div>

    <div class="form-group">
        <%= q.check_box :stay_anonymous, class: "form-control" %>
        <%= q.label "Stay anonymous?" %> <br />
    </div>

    <div class="form-group">
        <%= q.submit class: 'btn btn-primary btn-lg' %>
    </div>
    <% end %>
    <%= link_to "Back to questions listing", questions_path %>
</div>