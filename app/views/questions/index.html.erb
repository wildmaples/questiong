<h1>Listing Unanswered Questions</h1>

<p>

<%= link_to "Ask a new question", new_question_path %>

</p>

<table>

<tr>

<th>Question</th>

<th>Name</th>

<th>Date submitted</th>

</tr>

<% @questions.each do |question| %>

<tr>

<td><%= question.question %></td>
<td><%= question.name %></td>
<td><%= distance_of_time_in_words(Time.now, question.created_at) + " ago" %></td>
<td><%= link_to 'Edit', edit_question_path(question) %></td>
<td><%= link_to 'View', question_path(question) %></td>
<td><%= link_to 'Answer', new_question_path(question) %></td>

</tr>

<% end %>

</table>